		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"@hono/node-server": "^1.14.4",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.8.2",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@types/node": "^22.13.11",
		"@types/pg": "^8.15.6",
		"drizzle-kit": "^0.31.6",
		"tsx": "^4.19.2",
		"typescript": "^5.8.2"
	}
}
