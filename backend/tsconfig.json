{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowJs": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"types": ["node"],
		"outDir": "./dist",
		"skipLibCheck": true,
		"composite": true
	},
	"include": ["./src/**/*"]
}
